<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sc="clr-namespace:Plugin.SegmentedControl.Maui;assembly=Plugin.SegmentedControl.Maui"
             x:Class="SegmentedControlTest.Views.Modal2Page">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label
                Text="MODAL PAGE TWO"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            
            <Button                
                Text="Close Modal"                 
                Clicked="OnCloseModalClicked"
                HorizontalOptions="Fill" />

                <sc:SegmentedControl>
                    <sc:SegmentedControl.Children>
                                <sc:SegmentedControlOption Text="Apple" />
                                <sc:SegmentedControlOption Text="Pear" />
                                <sc:SegmentedControlOption Text="Orange" />
                    </sc:SegmentedControl.Children>
                </sc:SegmentedControl>


                <Button                
                Text="Close Modal Page"                 
                Clicked="OnCloseModalClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
